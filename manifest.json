{
  "name": "DAT Drupal.org - extension",
  "description": "Helper functionality",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["https://www.drupal.org/*"],
  "background": {
    "type": "module",
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "type": "module",
      "matches": ["https://www.drupal.org/project/issues/search/*"],
      "css": ["content-styles.css"],
      "js": ["drupal-content-queue.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["common.js", "drupal-user-count.js", "dynamic-filter-script.js", "multi-page.js", "toolbar.js","drupal-status-count.js", "toolbarRowFilterer.js"],
      "matches": ["https://www.drupal.org/*"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "/images/druplicon-small.png",
      "32": "/images/druplicon-small.png",
      "48": "/images/druplicon-small.png",
      "128": "/images/druplicon-small.png"
    }
  },
  "icons": {
    "16": "/images/druplicon-small.png",
    "32": "/images/druplicon-small.png",
    "48": "/images/druplicon-small.png",
    "128": "/images/druplicon-small.png"
  }
}
